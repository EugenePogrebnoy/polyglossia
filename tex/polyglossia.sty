\providecommand{\foreignlanguage}{}

\renewcommand{\foreignlanguage}[3][]{%
   \ifcsundef{#2@loaded}{\xpg@nolang{#2}\hyphenrules{#2}}{%
     {\def\languagename{#2}%
      \setkeys{#2}{#1}%
      \csuse@warn{#2@font}%
      \csuse@warn{#2@language}%
      \csuse{date#2}%
      \csuse{#2@numbers}%
      \use@localhyphenmins{#2}%
      \csuse{inlineextras@#2}%
      #3}%
   }%
}

